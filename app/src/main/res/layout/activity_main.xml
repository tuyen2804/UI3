<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:id="@+id/fragment_container_viewMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:landroid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_custom"
        android:orientation="vertical"
        tools:context=".UI.Activity.MainActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginBottom="@dimen/_4dp"
            android:layout_marginStart="@dimen/_12dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/h1_1"
                landroid:layout_constraintBottom_toBottomOf="parent"
                landroid:layout_constraintStart_toStartOf="parent"
                landroid:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:text="Image compressor and resizer"
                android:textColor="@color/white"
                android:textSize="@dimen/_16dp"
                landroid:layout_constraintBottom_toBottomOf="parent"
                landroid:layout_constraintEnd_toStartOf="@id/guideline"
                landroid:layout_constraintStart_toEndOf="@id/imageView1"
                landroid:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/button1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/h1_bt1"

                landroid:layout_constraintBottom_toBottomOf="parent"
                landroid:layout_constraintEnd_toEndOf="parent"
                landroid:layout_constraintHorizontal_bias="1.0"
                landroid:layout_constraintStart_toEndOf="@id/textView1"
                landroid:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/h2_tv1" />


        <LinearLayout
            android:id="@+id/bu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnFastCompression"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="@dimen/_12dp"
                android:layout_weight="1"

                android:orientation="vertical"
                android:background="@drawable/bg2"

                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView_button2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/icon_bt1" />

                <TextView
                    android:id="@+id/textView_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/_14sp"
                    android:textColor="@color/white"
                    android:text="Fast compressor" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnPreCompression"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/bg2"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView_button3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/icon_bt2" />

                <TextView
                    android:id="@+id/textView_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_14sp"
                    android:text="Pre-compression" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="@dimen/_12dp"
                android:layout_weight="1"
                android:background="@drawable/bg2"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView_button4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/icon_bt3" />

                <TextView
                    android:id="@+id/textView_button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_14sp"
                    android:text="Edit image" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/button5_container"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/bg2"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView_button5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/icon_bt4" />

                <TextView
                    android:id="@+id/textView_button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_14sp"
                    android:text="Crop the image" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btnFitstruetosize"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="@dimen/_12dp"
            android:background="@drawable/bg2"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView_button6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:background="@drawable/icon_bt5" />

            <TextView
                android:id="@+id/textView_button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_14sp"
                android:text="Fits true to size" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="My collection" />

            <ImageView
                android:id="@+id/button7"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:background="@drawable/h6_bt1" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:layout_marginTop="@dimen/_4dp"
            android:orientation="horizontal"
            landroid:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_recycler_view" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Convert image format"
            android:layout_marginStart="@dimen/_12dp"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            android:textAppearance="@font/a"
            android:textColor="@color/white"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/jpg"
                android:layout_height="80dp"
                android:layout_marginEnd="@dimen/_12dp"
                android:background="@drawable/bg2"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:background="@drawable/bt10"
                    android:layout_gravity="left"/>
                <TextView
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16dp"
                    android:text="Convert to JPG"
                    android:textColor="@color/white"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"

                android:background="@drawable/bg2"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bt11"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginStart="@dimen/_16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Convert to JPEG"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/_16dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="12dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:layout_marginEnd="@dimen/_12dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bt12"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Convert to PNG"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/_16dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/bg_button"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bt13"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Convert to HEIC"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/_12dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:orientation="vertical"
            android:layout_margin="@dimen/_12dp">
            <ImageView
                android:layout_width="42dp"
                android:layout_height="30dp"
                android:background="@drawable/bt14"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Convert to WEBP"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_16dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Other tools"
            android:layout_marginStart="@dimen/_12dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_12dp"
                android:background="@drawable/bg_button">
                <ImageView
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:background="@drawable/bt7"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Convert PDF to image"
                        android:textSize="@dimen/_16dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select PDF files and export images in any format"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_16dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_12dp"
                android:background="@drawable/bg_button">
                <ImageView
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:background="@drawable/bt8"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Convert image to PDF"
                        android:textSize="@dimen/_16dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload photos and receive as PDF"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_16dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_12dp"
                android:background="@drawable/bg_button">
                <ImageView
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:background="@drawable/bt20"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove background"
                        android:textSize="@dimen/_16dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Easily remove background from photo"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_16dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
</LinearLayout>